@import 'nib'
@import 'inc/mixin'
@import 'inc/fonts'
@import 'inc/components'
@import 'inc/layouts'
@import 'inc/helpers'
@import 'inc/animate'

html
	overflow-y scroll

html, body
	r-block()
	width 100%
	height 100%
	font-size 14px
	min-width 360px

h1
.h1
	font-size 3.0rem
	text-transform uppercase
	line-height 1.3
h2
	font-size: 2.5rem

// .flexbox
body
	display flex
	min-height 100vh
	flex-direction column
main
	flex 1 0 auto

footer.page-footer
	.footer-copyright
		padding 20px 0
		height auto
		line-height 1.5
		font-size 12px
		a
			display inline-block
			padding 0 5px
			&:hover
				text-decoration underline
	.footer-copyright-bottom
		padding 0 0 20px

@import 'inc/media'