@media screen and (max-width: 1200px)
	.c-video
		width 500px
		height 277px
	.c-lesson-card
		&__icon
			width 345px

@media screen and (max-width: 1100px)
	html .c-content
		.c-tab
			&__header-wrapper
				float left
				width 90px !important
			&__header
				display block
				overflow-y inherit
				width 80px !important
				height auto
				margin-left 0
			&__header-item
				display block
				float none
				width 100% !important
				text-align center
				.active
					background #EE6E73
					color #FFF
			&__content
				width calc(100% - 90px) !important
			&__content-item
				padding-top 0
				padding-left 20px
		.tabs .indicator
			display none
	.c-lesson-card
		&__content
			width 50%
		&__icon
			width 50%
			padding-top 50px

@media only screen and (max-width: 992px)
	h1
		font-size 2rem
	h2
		font-size 1.5rem
	.c-start-form
		margin-top 0

@media only screen and (max-width: 600px)
	h1
		font-size 1.7rem
	h2
		font-size 1.1rem
	.c-video
		width 300px
		height 166px
	.c-button-material
		font-size 1rem
		width 150px
		height 40px
		line-height 40px
		i
			font-size 1.3rem
	html .c-content
		.c-tab
			&__content-item
				padding-left 10px
	.c-lesson-card
		&__content
			width 100%
			float none
		&__icon
			display none
		&__content-header
			font-size 18px
			margin-top 10px
			margin-bottom 0
		&__content-header-bottom
			font-size 15px
			margin-bottom 0
			margin-top 30px
		&__content-list
			margin-top 0
			padding-left 20px