.c-content
	padding 30px 0 50px

.c-iframe-video
	r-block()
	width 100% !important
	height 100% !important

.c-video
	r-block()
	background #333
	width 720px
	height 400px
	cursor pointer

.c-button-material
	display block
	font-size 1.5rem

.c-index-header
	r-block()
	text-align center
	padding-bottom 20px

.c-start-form
	margin-top 30px
	&__button
		display block
		float right
		margin-right 10px
	.input-field input:focus + label
		color #ff6f00
	.input-field input:focus
		border-bottom 1px solid #ff6f00
		box-shadow 0 1px 0 0 #ff6f00
	.input-field input.valid
		border-bottom 1px solid #00c853
		box-shadow 0 1px 0 0 #00c853
	.input-field input.invalid
		border-bottom 1px solid #ff5252
		box-shadow 0 1px 0 0 #ff5252
	.input-field .prefix.active
		color #ff6f00