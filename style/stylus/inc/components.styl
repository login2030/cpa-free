.c-content
	padding 30px 0 50px

.c-iframe-video
	r-block()
	width 100% !important
	height 100% !important

.c-video
	r-block()
	background url('../../images/main-video.jpg') center center no-repeat
	background-size cover
	box-shadow 0px 0px 15px 0px rgba(50, 50, 50, 0.5)
	width 720px
	height 400px
	cursor pointer
	&--reviews
		background url('../../images/review-video.jpg') center center no-repeat

.c-button-material
	display block
	font-size 1.5rem
	width 200px

.c-index-header
	r-block()
	text-align center
	padding-bottom 20px

.c-start-form
	margin-top 30px
	&__button
		display block
		float right
		margin-right 10px
	.input-field input:focus + label
		color #ff6f00
	.input-field input:focus
		border-bottom 1px solid #ff6f00
		box-shadow 0 1px 0 0 #ff6f00
	.input-field input.valid
		border-bottom 1px solid #00c853
		box-shadow 0 1px 0 0 #00c853
	.input-field input.invalid
		border-bottom 1px solid #ff5252
		box-shadow 0 1px 0 0 #ff5252
	.input-field .prefix.active
		color #ff6f00

.c-table
	width 100%
	height 100%
	display table
	&__row
		display table-row
	&__cell
		display table-cell
		vertical-align middle

.c-mob-menu
	padding-top 56px

.c-tab
	max-width 900px
	margin auto
	&__content-item
		padding-top 30px

.c-lesson-card
	clearfix()
	&__content
		float left
		width 400px
		text-align left
	&__content-header
		font-size 20px
		margin-bottom 0
	&__content-header-bottom
		font-size 16px
		margin-bottom 0
	&__content-list
		padding-left 30px
		margin-top 5px
	&__icon
		float right
		width 420px
	&__link
		display block
		cursor pointer
	&__img
		display block
		width 100%
		margin-top 30px

.c-scroll-fire
	text-align left
	font-size 18px
	&__item
		position relative
		padding-left 40px
		line-height 28px
		margin-bottom 10px
	&__ico
		position absolute
		top 0
		left 0
		
	
	